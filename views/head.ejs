<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/main.css" rel="stylesheet">
  </head>
  <body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="/">Browser Warfare</a>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
      <li class="active"><a href="/">Home</a></li>
      <li><a href="#">Link</a></li>
    </ul>

    <% if ( loggedIn ) { %>
      <form class="navbar-form navbar-right" style="padding-right:50px" method="get" action="/logout">
        <label style="padding-right:20px">Balance: <%= balance %></label>
        <label style="padding-right:20px">User: <%= username %></label>
        <input type="submit" class="btn btn-default" value="Logout">
      </form>
    <% } else { %>
    <div class="navbar-form navbar-right">
      <input type="submit" class="btn btn-default" id="createAccount" value="Create Account">
    </div>
    <form class="navbar-form navbar-right" style="padding-right:10px" method="post" action="/login">
      <input type="text" name="username" maxlength="100" placeholder="Username">
      <input type="password" name="password" maxlength="100" placeholder="Password">
      <input type="submit" class="btn btn-default" value="Login">
    </form>
    <% } %>
  </div><!-- /.navbar-collapse -->
</nav>
<% if (!loggedIn ) { %>
    <div id="confirm" class="modal">
	    <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title">Create Account</h4>
          </div>
          <div class="modal-body">
            <div class="row">
            <form class="form-horizontal" style="width: 400px; margin: -5px auto;" method="post" action="/createAccount">
              <div><label>Username</label><input type="text" style="float:right" maxlength="100" id="accountUsername" placeholder="Username"></div>
<br>
              <div><label>Password</label><input type="password" style="float:right" maxlength="100" id="accountPassword" placeholder="Password"></div>
<br>
              <div><label>Confirm Password</label><input style="float:right" type="password" maxlength="100" id="accountPassword2" placeholder="Confirm Password"></div>
<br>
              <div><label>Email</label><input type="text" style="float:right" maxlength="100" id="accountEmail" placeholder="Email" required></div>
              <br>
              <div><input type="submit" id="createAccountFinal" class="btn btn-default" value="Create Account"></div>
              <br>
              <label style="color: #f00" id="errorLabel"></label>
            </form>
            </div>
          </div>
          <div class="modal-footer">
            <a href="#" data-dismiss="modal" class="btn">Cancel</a>
          </div>
        </div>
      </div>
    </div>
<% } %>
